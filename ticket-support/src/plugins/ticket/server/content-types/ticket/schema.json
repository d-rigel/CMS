{
  "kind": "collectionType",
  "collectionName": "tickets",
  "info": {
    "singularName": "ticket",
    "pluralName": "tickets",
    "displayName": "Ticket"
  },
  "options": {
    "draftAndPublish": false,
    "comment": ""
  },
  "pluginOptions": {
    "content-manager": {
      "visible": true
    },

    "content-type-builder":{
      "visible": true
    }
  },
  "attributes": {
    "from": {
      "type": "email",
      "required": true
    },
    "to": {
      "type": "email",
      "required": true
    },
    "subject": {
      "type": "string"
      
    },
    "message": {
      "type": "string"
      
    },
    "status": {
      "type": "enumeration",
      "enum": [
        "wait",
        "read",
        "replied",
        "resolved",
        "spam"
      ],
      "default": "wait"
    },
    "threadId": {
      "type": "string"
     
    },
    "date": { 
      "type": "datetime"
    }
    
  }
}